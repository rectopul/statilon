.wallet
    width var(--wallet-with)
    position relative
    height calc(100vh - var(--header-height))
    color #2043b6d9
    border-left 1px solid #dee3e7
    display grid
    grid-template-areas: "details"\
                         "list"\
                         "actions"
    grid-template-rows min-content auto min-content

    .wallet-close
        position absolute
        fill currentColor
        background #ff
        top 10px
        left 0
        transform: translate(-100%)
        padding 10px 8px
        border-radius 10px 0 0 10px
        border 1px solid #dee3e7
        display flex
        justify-content center
        align-items center
        flex-direction column
        grid-gap 0.3rem
        gap 0.3rem
        color: inherit

        svg
            fill currentColor


    &__content
        padding-top 1.6em
        padding-inline 10px
        background #f4f6fb
        display grid
        grid-area list
        grid-template-areas: "title"\
                             "list"
        grid-template-rows: min-content auto

        &--list
            grid-area: list

            .asset-details
                display flex
                padding 10px
                justify-content space-between
                grid-gap 10px
                gap 10px

                img
                    width 50px
                    height 50px
                    background #e8eefc
                    border-radius 50%
                    padding 14.2857px
                    margin 0

                &-container
                    display grid
                    max-width 100%
                    width 100%
                    grid-template-areas "symbol price"\
                                         "change amount"

                    .text-price
                        font-size inherit
                        font-weight 500
                        text-align right
                        line-height 1.5

                        > span
                            white-space pre

                            > span
                                font-size 12px

                    .change
                        grid-area change
                        font-size inherit
                        font-weight 400
                        display flex
                        align-items center
                        grid-gap 4px
                        gap 4px
                        color #3774f6

                    .amount
                        grid-area amount
                        font-size 15px
                        font-weight 400
                        color #2043b6d9
                        white-space: nowrap
                        text-align right
                        

                    h1, h2
                        margin 0
                        padding 0
                        color currentColor
                        font-size inherit
                        line-height 1.5
                        display block

                        &.symbol
                            grid-area symbol
                            font-size 15px
                            grid-gap 6px
                            gap 6px
                            display flex
                            font-weight 500
                            

                            
        &--title
            display flex
            justify-content space-between
            color #2043b6
            padding-inline 10px
            

            h3, button
                font-weight 500
                font-size inherit
                color currentColor
                border 0
                padding 0
                margin 0
                outline 0
                background none
                line-height inherit
                display inline-flex
                justify-content center
                align-items center
                grid-gap 5px
                gap 5px
                white-space: nowrap

            button
                font-size 12px
                color #075ae9

    &__head
        border-bottom 1px solid  #dee3e7
        padding 1.6em
        background #fff
        height: fit-content
        grid-area details

        div
            display flex
            align-items center
            justify-content space-between
            grid-gap 10px
            gap 10px
            margin-top 20px

        & h1
            color currentColor

        h1
            margin 0
            font-size 22pt
            font-weight 600
            color #2043b6
            line-height 1.5

            small
                font-size var(--font-size-small)

        p
            font-size 14px
            margin-bottom 0
            line-height 1.5
            font-family gotham
            font-weight 400
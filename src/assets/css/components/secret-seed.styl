.wallet-connect-container
    width 100vw
    height 100vh
    padding 20px
    display grid
    grid-template-areas "header-wallet"\
                        "aside-area"\
                        "title-wallet"\
                        "content-wallet"
    grid-template-rows min-content auto auto auto
    background-color #fff

    &.black
        background-color #222222
        aside
            background-color #2f2f2f
        aside, title, .content
            color #fff

            h4, p, h1, textarea
                color #fff
            textarea
                background #181818
                border 1px solid #2f2f2f


    header
        grid-area header-wallet
        width 100%
        text-align center

    aside
        grid-area aside-area
        width 100%
        background-color #eaf0f8
        border-radius 3px
        padding 15px
        color #919ece
        margin-top 15px
        margin-bottom 15px

        h4
            font-size 16px
            font-weight 500
            color #2848b0

        p
            margin 0
            color currentColor

    .title
        grid-area title-wallet
        width 100%
        padding 20px

        h1
            color #1e3fb8
            font-weight 500
            margin-bottom 10px
            text-align center

        p
            color #1e3fb8
            opacity .5
            font-size 16px
            font-weight 400
            text-align center

    .content
        grid-area content-wallet
        width 100%
        padding 20px    

        form
            width 100%
            display flex
            flex-direction column

            textarea
                height 80px
                padding 10px
                border 1px solid #cdcdcd
                border-radius 8px

            button
                width 100%
                background-color  rgba(51, 153, 255,0.9)
                border-radius 8px
                margin-top 20px
                font-weight 500
                height 44px
                color #fff
                box-shadow: 0 2px 4px 0 rgba(0,0,0,0.14);

                &:disabled
                    opacity .5
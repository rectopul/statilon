.black-modal
    display flex
    justify-content: center
    align-items center
    position fixed
    width 100vw
    height 100vh
    left 0
    top 0
    z-index 101
    background-color rgba(0,0,0,0.8)
    

.overlay-container
    display grid
    grid-template-areas "modal-header"\
                        "modal-content"
    grid-template-rows min-content auto
    width 90vw
    max-width 532px
    background-color #fff
    margin 0 auto
    padding 40px 25px
    border-radius 8px

    header
        grid-area modal-header
        text-align center
        color #2043b6
        font-size 20px  
        font-weight 600
        margin-bottom 33px

    article 
        grid-area modal-content
        color #2043b6

        ul
            list-style none
            display flex
            flex-direction column
            margin 0
            padding 0
            width 100%

            li
                display flex
                justify-content space-between
                width 100%  

                &:first-child
                    button
                        border 0

                button
                    display flex
                    justify-content space-between
                    flex 1
                    padding 20px
                    align-items center
                    color #2043b6
                    font-size 14px
                    border 1px solid #fff
                    border-top: 1px solid #ecf0f8
                    font-weight 500
                    background #fff

                    &:hover
                        background-color: #f2f4ff

                    svg, img
                        width 30px
                        margin 0
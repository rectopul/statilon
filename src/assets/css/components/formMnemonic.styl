.mnemonic-container
    width 100vw
    height 100vh
    padding 20px
    display flex
    align-items center

    .mnemonic-form
        display grid
        width 100%
        grid-template-areas "header"\
                            "input"\
                            "submit"
        grid-template-rows min-content auto auto

        label
            grid-area header
            font-weight 500
            color #2043b6
            font-size 14px

        textarea
            grid-area input
            outline 0
            border 1px solid #cdd7e9
            border-radius 8px
            padding 12px
            max-height 89px
            grid-gap 4px
            gap 4px

        button
            background #075ae9
            color #f2f2f2
            outline 0
            height 48px
            min-width 150px
            grid-area submit
            grid-gap 5px
            gap 5px
            padding-left 20px
            padding-right 20px
            border 0
            border-radius 24px
            margin-top 20px
            resize none

            &:disabled
                background-color hsl(218, 94%, 47%)
                opacity .5





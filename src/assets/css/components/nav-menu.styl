.nav-menu
    display flex

    ul
        flex 1
        list-style none
        display flex
        padding 0
        margin 0
        color #2043b6
        height 38px
        align-items center
        justify-content flex-end

        li
            flex 0 0 auto
            color inherit

            &.yellow
                a
                    svg
                        color rgba(237, 108, 2, 1)

            a
                display flex
                color inherit
                padding 10px

                svg
                    width 1em
                    height 1em
                    fill: currentcolor

            button
                color currentColor
                border 1px solid
                background-color transparent
                min-width: 100px
                height: 32px
                font-size: 14px
                border-radius: 15px
                font-weight 600